<p id="notice"><%= notice %></p>

<h1> <%=t('coins')%> </h1>
<h2> <%= cookies[:curso] %> </h2>
<h2> <%= session[:curso] %> </h2>
<table>
  <thead>
    <tr>
      <th><%= Coin.human_attribute_name(:description)%></th>
      <th><%= Coin.human_attribute_name(:acronym)%></th>
      <th><%= Coin.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "35x30" %> </td>
        <td><%= link_to t('show'), coin %></td>
        <td><%= link_to t('edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('destroy'), coin, method: :delete, data: { confirm: t('q1') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_coin'), new_coin_path %>
