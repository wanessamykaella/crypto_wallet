<p id="notice"><%= notice %></p>

<h1> <%=t('coins')%> </h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Coin.human_attribute_name(:description)%></th>
      <th><%= Coin.human_attribute_name(:acronym)%></th>
      <th><%= Coin.human_attribute_name(:url_image)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "48x38" %> </td>
        <td><%= link_to t('show'), coin %></td>
        <td><%= link_to t('edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('destroy'), coin, method: :delete, data: { confirm: t('msg_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_coin'), new_coin_path, class:"btn btn-info" %>
<%= link_to t('back'), welcome_index_path, class:"btn btn-info" %>
