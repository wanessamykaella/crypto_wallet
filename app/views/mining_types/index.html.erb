<p id="notice"><%= notice %></p>

<h1><%= t('mining_type')%></h1>

<table>
  <thead>
    <tr>
      <th><%= MiningType.human_attribute_name(:description)%></th>
      <th><%= MiningType.human_attribute_name(:acronym)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('show'), mining_type %></td>
        <td><%= link_to t('edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('destroy'), mining_type, method: :delete, data: { confirm: t('q1') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

